# Optional: Claude API (used by scripts/search.py and extract_yamls.py)
ANTHROPIC_API_KEY=sk-ant-api03-YOUR_KEY_HERE

# Azure AI Search
AZURE_SEARCH_ENDPOINT=https://YOUR-SEARCH-SERVICE.search.windows.net
AZURE_SEARCH_KEY=YOUR_SEARCH_ADMIN_KEY
AZURE_SEARCH_INDEX=ai-context-vault

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT=yourstorageaccount
AZURE_STORAGE_KEY=YOUR_STORAGE_KEY
AZURE_BLOB_CONTAINER=session-summaries

# Optional: Azure OpenAI for better save.py summaries
AZURE_OPENAI_ENDPOINT=https://YOUR-AOAI.openai.azure.com
AZURE_OPENAI_KEY=YOUR_AOAI_KEY
AZURE_OPENAI_DEPLOYMENT=summary-chat
AZURE_OPENAI_API_VERSION=2024-10-21
AZURE_OPENAI_MAX_INPUT_CHARS=6000
AZURE_OPENAI_MAX_OUTPUT_TOKENS=300

# Optional: only if your local Python has TLS trust issues
# AZURE_INSECURE_TLS=1
